# ─────────────────────────────────────────────
#  MESS Platform — Environment Variables
# ─────────────────────────────────────────────
# Copy this file to .env and fill in values.
# Never commit .env to version control.

# Django
DJANGO_SECRET_KEY=change-me-to-a-long-random-string
DJANGO_SETTINGS_MODULE=config.settings.development
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
POSTGRES_DB=mess_db
POSTGRES_USER=mess_user
POSTGRES_PASSWORD=mess_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# JWT
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=30

# CORS — comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://127.0.0.1:4200

# Media & Static
MEDIA_URL=/media/
STATIC_URL=/static/

# ─── Payment Providers ─────────────────────
# Wave
WAVE_API_KEY=
WAVE_MERCHANT_ID=
WAVE_WEBHOOK_SECRET=
WAVE_BASE_URL=https://api.wave.com/v1

# Orange Money (Sénégal)
ORANGE_MONEY_API_KEY=
ORANGE_MONEY_CLIENT_ID=
ORANGE_MONEY_CLIENT_SECRET=
ORANGE_MONEY_BASE_URL=https://api.orange.com/orange-money-webpay/sen/v1

# Free Money (Expresso)
FREE_MONEY_API_KEY=
FREE_MONEY_BASE_URL=

# ─── SMS Gateway ───────────────────────────
# Provider: infobip | twilio | orange-sms
SMS_PROVIDER=infobip
SMS_API_KEY=
SMS_SENDER_ID=MESS

# ─── Maps ──────────────────────────────────
# Provider: osm | mapbox (abstracted — switch without code changes)
MAPS_PROVIDER=osm
# Mapbox token (only needed if MAPS_PROVIDER=mapbox)
MAPBOX_TOKEN=

# ─── Push Notifications ────────────────────
FCM_SERVER_KEY=

# ─── Email (optional — for admin alerts) ───
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@mess.sn
